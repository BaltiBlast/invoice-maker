<%- include('partials/head.ejs') %>

<main>
  <form action="/client-add" method="POST">
    <section class="grid">
      <!-- RAISON SOCIALE -->
      <label>
        Entreprise OU nom de famille
        <input type="text" name="clientName" placeholder="Basic Frite/Marie Henry" required />
      </label>

      <!-- Email -->
      <label>
        Email
        <input name="email" placeholder="raton_braqueur@mail.com" required />
      </label>
    </section>

    <section class="grid">
      <!-- NOM RUE -->
      <label class="label">
        Nom de rue
        <input name="adress" placeholder="5 Rue de la Banque" required />
      </label>

      <!-- VILLE -->
      <label class="label">
        Ville
        <input name="city" placeholder="Money" required />
      </label>

      <!-- CODE POSTAL -->
      <label class="label">
        Code postal
        <input name="zipCode" placeholder="99999" required />
      </label>
    </section>
    <button type="submit">Ajouter client</button>
  </form>

  <section class="grid custom-grid">
    <% if (clients) { %> <% clients.forEach(function(client) { %>
    <article>
      <form class="card-display" action="/client-delete" method="post">
        <section class="flex-direction-column">
          <b><span>👤 <%= client.client_name %></span></b>
          <span>🏠 <%= client.formattedAdress %></span>
          <span>✉️ <%= client.client_email %></span>
          <span>💲 <%= client.client_total_payment %>€</span>
        </section>
        <!-- ADD INPUT WITH RECORD ID FOR DELETING HERE -->
        <input type="hidden" name="recordId" value="<%= client.recordId %>" />

        <section class="grid">
          <button type="button" onclick="openModal('<%= client.client_id %>')">✏️</button>
          <button type="submit">❌</button>
        </section>
      </form>
    </article>

    <dialog id="<%= client.client_id %>">
      <article>
        <form action="/client-update" method="POST">
          <section class="grid">
            <!-- RAISON SOCIALE -->
            <label>
              Entreprise OU nom de famille
              <input type="text" name="clientName" value="<%= client.client_name %>" required />
            </label>

            <!-- Email -->
            <label>
              Email
              <input name="email" value="<%= client.client_email %>" required />
            </label>
          </section>

          <!-- ADRESSE -->
          <section class="grid">
            <!-- RUE -->
            <label>
              Adresse
              <input name="adress" value="<%= client.client_adress %>" required />
            </label>

            <!-- VILLE -->
            <label>
              Ville
              <input name="city" value="<%= client.client_city_name %>" required />
            </label>

            <!-- CODE POSTAL -->
            <label>
              Code postal
              <input name="zipCode" value="<%= client.client_zip_code %>" required />
            </label>
          </section>

          <input type="hidden" name="recordId" value="<%= client.recordId %>" />

          <section class="grid">
            <button type="submit">Mettre à jour</button>
            <button type="button" onclick="closeModal('<%= client.client_id %>')">Annuler</button>
          </section>
        </form>
      </article>
    </dialog>

    <% }); %> <% } %>
  </section>
</main>

<%- include('partials/footer.ejs') %>
