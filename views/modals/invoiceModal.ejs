<div id="invoiceModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content pdf-frame mar-bot">
    <!-- Conteneur de la facture -->
    <div id="invoiceToSend" class="facture-container">
      <!-- En-tête avec infos prestataire et client -->
      <div class="facture-header">
        <!-- Infos Prestataire -->
        <div class="facture-prestataire">
          <h2 class="title is-4 facture-title">Prestataire</h2>
          <p><%= user.user_first_name %> <%= user.user_last_name %></p>
          <p><%= user.user_adress %></p>
          <p><%= user.user_city_name %> - <%= user.user_zip_code %></p>
          <p><%= user.user_email %></p>
        </div>

        <!-- Infos Client -->
        <div class="facture-client">
          <h2 class="title is-4 facture-title">Client</h2>

          <p id="client-name"></p>
          <p id="client-adress"></p>
          <p id="client-city"></p>
          <p id="client-email"></p>
        </div>
      </div>

      <!-- Date de Facturation -->
      <div class="facture-date">
        Facture n°<span id="invoice-number">Numero</span> - <span id="facture-month">Mois</span>
        <span id="facture-year">Année</span>
      </div>

      <!-- Tableau des Prestations -->
      <table class="facture-table">
        <thead>
          <tr>
            <th>Prestation</th>
            <th>Prix Unitaire (€)</th>
            <th>Quantité</th>
            <th>Prix Total (€)</th>
          </tr>
        </thead>
        <tbody id="prestation-price"></tbody>
        <tfoot>
          <tr>
            <th colspan="3" class="has-text-right">Total</th>
            <th id="totalPrice"></th>
          </tr>
        </tfoot>
      </table>

      <!-- Footer de la Facture -->
      <div class="facture-footer">
        <p>Les instructions de paiement sont indiquées ici. Merci de régler lafacture sous 30 jours.</p>
      </div>
    </div>
  </div>
  <div class="footer-facture-button-container">
    <button id="send-button" class="button is-success is-large" onclick="invoiceFormInteraction.sendEmail()">
      Envoyer la rançon
    </button>
    <button class="button is-large is-danger" onclick="closeModal()" type="button">revoir les termes</button>
  </div>
</div>
