<section id="invoiceServicesTab" class="tab-content active">
  <table class="striped">
    <thead>
      <tr>
        <th>Prestation</th>
        <th>Prix</th>
        <th>Nombre</th>
      </tr>
    </thead>
    <tbody>
      <% if (services) { %> <% services.forEach(service => { %>
      <tr data-service-id="<%= service.service_id %>">
        <td><%= service.service_name %></td>
        <td><%= service.service_price %>â‚¬</td>
        <td>
          <input
            class="margin-none"
            type="number"
            name="services[<%= service.service_id %>][quantity]"
            value="0"
            min="0"
            required
          />
          <input type="hidden" name="services[<%= service.service_id %>][name]" value="<%= service.service_name %>" />
          <input type="hidden" name="services[<%= service.service_id %>][price]" value="<%= service.service_price %>" />
        </td>
      </tr>
      <% }) %> <% } %>
    </tbody>
  </table>
</section>
